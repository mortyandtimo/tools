<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IntelliCoreToolbox.Views.AppCenterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <!-- 顶部收藏区 -->
            <RowDefinition Height="140"/>
            <!-- 底部左右分栏区 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🎯 顶部收藏区 (水平滚动) -->
        <Border Grid.Row="0" 
                Background="#F8F8F8" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 收藏区标题 -->
                <TextBlock Grid.Row="0"
                          Text="⭐ 收藏应用"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="DarkSlateGray"
                          Margin="16,12,16,8"/>
                
                <!-- 🎯 水平滚动收藏列表 (数据绑定) -->
                <ScrollViewer x:Name="FavoritesScrollViewer"
                             Grid.Row="1"
                             HorizontalScrollBarVisibility="Hidden"
                             VerticalScrollBarVisibility="Hidden"
                             HorizontalScrollMode="Auto"
                             VerticalScrollMode="Disabled"
                             ZoomMode="Disabled"
                             Margin="16,0,16,12">
                    <Grid x:Name="FavoritesRepeaterContainer">
                        <ItemsRepeater x:Name="FavoritesRepeater">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal" Spacing="20"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="80" Height="80" 
                                            Background="{Binding Background}" 
                                            CornerRadius="16"
                                            ToolTipService.ToolTip="{Binding Name}">
                                        <TextBlock Text="{Binding Icon}" 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"
                                                    FontWeight="Bold"
                                                    FontSize="12"
                                                    Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 🎯 底部左右分栏区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- 左侧：全部应用区 -->
                <ColumnDefinition Width="*"/>
                <!-- 分割线 -->
                <ColumnDefinition Width="1"/>
                <!-- 右侧：合集区 -->
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- 🎯 左侧：全部应用区 (GridView) -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 全部应用标题和搜索栏 -->
                <Grid Grid.Row="0" Margin="16,8,16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                              Text="🗂️ 全部应用"
                              FontSize="16"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="DarkSlateGray"/>
                    
                    <TextBox Grid.Column="1"
                            PlaceholderText="搜索应用..."
                            Width="200"
                            Height="32"/>
                </Grid>
                
                <!-- 🎯 应用网格视图 (数据绑定 + 响应式布局) -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <GridView x:Name="AppsGridView"
                             ItemsSource="{x:Bind ViewModel.AllApps, Mode=OneWay}"
                             Margin="16,0,1,16"
                             SelectionMode="None"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Top"
                             SizeChanged="AppsGridView_SizeChanged"
                             ItemClick="AppsGridView_ItemClick"
                             IsItemClickEnabled="True">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid x:Name="AppsWrapGrid" 
                                              Orientation="Horizontal"
                                              ItemWidth="120"
                                              ItemHeight="140"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        
                        <!-- 🎯 应用项目数据模板 -->
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border Width="120" Height="140" 
                                       Background="White" 
                                       CornerRadius="8"
                                       BorderBrush="#E0E0E0"
                                       BorderThickness="1"
                                       Padding="8">
                                    <!-- 为整个Border添加工具提示 -->
                                    <ToolTipService.ToolTip>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Description}" FontSize="11"/>
                                        </StackPanel>
                                    </ToolTipService.ToolTip>
                                    <StackPanel>
                                        <Border Width="64" Height="64" 
                                               Background="{Binding Background}" 
                                               CornerRadius="8"
                                               Margin="0,0,0,8">
                                            <FontIcon FontFamily="Segoe MDL2 Assets"
                                                     Glyph="{Binding Icon}"
                                                     FontSize="32"
                                                     Foreground="White"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}"
                                                 TextAlignment="Center"
                                                 FontSize="12"
                                                 TextWrapping="Wrap"
                                                 Foreground="Black"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </ScrollViewer>
            </Grid>

            <!-- 🎯 分割线 -->
            <Border Grid.Column="1" 
                   Background="#E0E0E0"/>

            <!-- 🎯 右侧：合集区 (ListView) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 合集标题 -->
                <TextBlock Grid.Row="0"
                          Text="📂 合集"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Margin="12,8,12,8"
                          Foreground="DarkSlateGray"/>
                
                <!-- 🎯 合集列表 (数据绑定 + 弹窗交互) -->
                <ListView x:Name="CollectionsListView"
                         ItemsSource="{x:Bind ViewModel.Collections, Mode=OneWay}"
                         Grid.Row="1"
                         Margin="8,0,8,16"
                         SelectionMode="None"
                         ItemClick="CollectionsListView_ItemClick"
                         IsItemClickEnabled="True">
                    
                    <!-- 🎯 合集项目数据模板 -->
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="24" Height="24" 
                                       Background="{Binding Background}" 
                                       CornerRadius="4">
                                    <TextBlock Text="{Binding Icon}" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"
                                             FontSize="10"/>
                                </Border>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                             FontSize="12"
                                             FontWeight="SemiBold"
                                             Foreground="Black"/>
                                    <TextBlock Text="{Binding AppCount}"
                                             FontSize="10"
                                             Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Page> 