<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="IntelliCoreToolbox.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:IntelliCoreToolbox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- 标题栏区域 -->
            <RowDefinition Height="32"/>
            <!-- 主内容区域 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🎯 自定义标题栏区域 -->
        <Grid x:ConnectionId='2' x:Name="TitleBarArea" Grid.Row="0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="46"/> <!-- 预留关闭按钮宽度 -->
            </Grid.ColumnDefinitions>
            
            <!-- 软件名、版本和主题切换按钮 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0">
                <TextBlock x:ConnectionId='7' x:Name="AppNameText" 
                          Text="IntelliCore Toolbox" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"/>
                <TextBlock x:ConnectionId='8' x:Name="AppVersionText" 
                          Text="v1.0.0" 
                          FontSize="11" 
                          Opacity="0.7"
                          VerticalAlignment="Center"
                          Margin="8,0,0,0"/>
                          
                <!-- 主题切换按钮放在版本号后面 -->
                <Button x:ConnectionId='9' x:Name="ThemeToggleButton" 
                                                    
                        Background="Transparent"
                        BorderThickness="0"
                        Width="28" 
                        Height="28"
                        VerticalAlignment="Center"
                        Margin="12,0,0,0"
                        Padding="2"
                        ToolTipService.ToolTip="切换主题">
                    <FontIcon x:ConnectionId='10' x:Name="ThemeIcon" 
                             FontFamily="Segoe MDL2 Assets" 
                             Glyph="&#xE771;" 
                             FontSize="14"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 🎯 主内容区域 -->
        <Grid x:ConnectionId='3' x:Name="MainContentArea" Grid.Row="1">
            <StackPanel
                HorizontalAlignment="Center"
                Spacing="25"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="24"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MyLabel}"
                    Text="Hello, World!" />
                <TextBlock
                    FontSize="20"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MyLabel}"
                    Text="Welcome to WinUI 3!" />
                <TextBlock x:ConnectionId='4'
                    x:Name="txtCount"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MyLabel}"
                    Text="Current count: 0" />
                <Button x:ConnectionId='5'
                                          
                    Content="Click Me"
                    HorizontalAlignment="Center"
                    Style="{StaticResource PrimaryAction}" />
                    
                <!-- 主题状态显示 -->
                <TextBlock x:ConnectionId='6' x:Name="ThemeStatusText"
                          Text="当前主题: 浅色"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Opacity="0.8"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

