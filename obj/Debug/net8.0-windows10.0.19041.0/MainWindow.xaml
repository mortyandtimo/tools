<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="IntelliCoreToolbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- 自定义标题栏区域 -->
        <Grid x:ConnectionId='2' x:Name="CustomTitleBar" 
              Height="48" 
              VerticalAlignment="Top" 
              Background="#FF2D2D30"
              Canvas.ZIndex="1">
            
            <StackPanel Orientation="Horizontal" 
                       VerticalAlignment="Center" 
                       Margin="16,0">
                <TextBlock Text="IntelliCore Toolbox" 
                          Foreground="White" 
                          FontSize="16" 
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"/>
                <TextBlock Text="v1.0.0" 
                          Foreground="#FFCCCCCC" 
                          FontSize="12" 
                          VerticalAlignment="Center"
                          Margin="12,0,0,0"/>
            </StackPanel>
            
            <!-- 自定义窗口控制按钮 -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"
                       Margin="0,0,16,0">
                <Button x:ConnectionId='3' Content="—" 
                       x:Name="MinimizeButton"
                       Width="32" 
                       Height="32" 
                       Background="Transparent" 
                       Foreground="White"
                       BorderThickness="0"
                       Margin="4,0"/>
                <Button x:ConnectionId='4' Content="□" 
                       x:Name="MaximizeButton"
                       Width="32" 
                       Height="32" 
                       Background="Transparent" 
                       Foreground="White"
                       BorderThickness="0"
                       Margin="4,0"/>
                <Button x:ConnectionId='5' Content="✕" 
                       x:Name="CloseButton"
                       Width="32" 
                       Height="32" 
                       Background="Transparent" 
                       Foreground="White"
                       BorderThickness="0"
                       Margin="4,0"/>
            </StackPanel>
        </Grid>

        <!-- 主内容区域 -->
        <Grid Margin="0,48,0,0" Background="#FF1E1E1E">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <TextBlock Text="IntelliCore Toolbox" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,16"/>
                <TextBlock Text="版本 1.0.0" 
                          FontSize="18" 
                          Foreground="#FFCCCCCC" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,24"/>
                <TextBlock Text="✅ 自定义标题栏已启用" 
                          FontSize="14" 
                          Foreground="#FF4CAF50" 
                          HorizontalAlignment="Center"
                          Margin="0,4"/>
                <TextBlock Text="✅ 窗口拖拽功能已配置" 
                          FontSize="14" 
                          Foreground="#FF4CAF50" 
                          HorizontalAlignment="Center"
                          Margin="0,4"/>
                <TextBlock Text="✅ UI加载完成" 
                          FontSize="14" 
                          Foreground="#FF4CAF50" 
                          HorizontalAlignment="Center"
                          Margin="0,4"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window> 

